<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbbaTheCash.Views.HomePage"
             Shell.NavBarIsVisible="True"
             Title="Home">
    <VerticalStackLayout >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="0" Grid.Row="0">
                <Button Command="{Binding PayBillCommand}" Text="Pay Bill" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="0">
                <Button Command="{Binding PayRentCommand}" Text="Pay Rent" />
            </Frame>
            <Frame Grid.Column="0" Grid.Row="1">
                <Button Command="{Binding EducationFeeCommand}" Text="Education Fee" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="1">
                <Button Command="{Binding OfficeBillCommand}" Text="Office Bill" />
            </Frame>
        </Grid>
    </VerticalStackLayout>

</ContentPage>
